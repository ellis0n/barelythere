        box-shadow: inset -1px 0px 0px 1rem rgba(255, 255, 255, 0.219), inset 0px -2px 0px 0px rgba(255, 255, 255, 0.199);
        transition: filter 0.s;
        position: relative;
        background: black;
        filter: invert(1)
    }

    .nav-item:hover:before{
        content: '';
        display: block;
        width: 0px;
        height: 0px;
        background: white;
        transition: width .3s;
    }	

