---
interface Props {
	current: string;
}

const {current} = Astro.props;

const links = [
    {
        text: 'home',
        href: '/',
    },
    {
        text: 'releases',
        href: '/releases',
    },
    {
        text: 'shows',
        href: '/shows',
    },
    {
        text: 'blog',
        href: '/blogs',
    },
    {
        text: 'zines',
        href: '/zines',
    },
];

const checkUrl = (url: string, href: string) => {
    if (url === href) {
        return 'active';
    }
    return '';
};
---
<div class="navbar text-white pt-2 sm:flex sm:flex-row sm:justify-center sm:text-xl md:text-2xl fixed right-2 top-24 sm:static ">
    <nav class="navbar-inner ">
        <ul class="grid justify-items-end sm:flex sm:flex-row sm:justify-center ">
            {links.map((link, index) => (
                <li class={`nav-item ${index > 0 ? 'mt-4 ml-6' : 'mt-4 ml-6 sm:ml-0'} sm:px-4    ${checkUrl(link.href, current)}`}>
                    <a href={link.href}>
                        <div class="container">
                            {link.text}
                        </div>
                    </a>
                </li>
            ))}
        </ul>
    </nav>
</div>

<style>

    .navbar {
        z-index: 1;
        font-family: dotgothic16;

    }



    .nav-item:hover, .active {
        box-shadow: inset px 0px 0px 2rem rgba(255, 255, 255, 0.219);
        transition: box-shadow 0.1s;
        background: black;
        color: #fff;
    }

</style>
