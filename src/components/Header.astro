---
import Navbar from "./Navbar.astro";

interface Props {
	current: string;
	fixed?: boolean;
}

const { current, fixed } = Astro.props;
---

<header
	class=`banner grid grid-cols-5 fixed w-full mb-20 py-8 z-20 bg-white bg-opacity-90  ${fixed ? "top-0" : ""}`
>
	<a href="/" class="col-start-2">
		<h1 class="text-6xl scroll:text-2xl">
			barely there
		</h1>
	</a>
	<Navbar current={current} />
</header>

<style>
	header {
		font-family: Young Serif;
	}
</style>
