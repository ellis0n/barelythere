---

interface Props {
    post:{
        title: string;
        username: string;
        description: string;
        tag: string;
        draft: boolean;
        date: string;
        slug: string;
        relatedPosts: array;
        content: string;
    }
}
console.log('here')
console.log(Astro.props.post)

const { title, username, date, slug, relatedPosts, content, description } = Astro.props.post
---

<div>
    <div class="bg-black py-2 text-white">
        <div class=" text-center">
            <h1 class="text-4xl">
                {title}
            </h1>
            
            <h2 class="text-1xl">
                <a href=`../${username}`>
                    {username}
                </a>
            </h2>
        </div>
    </div>

    <div class="border">
        <p>
            {description}
        </p>
        <p>
            {
            date.split('T')[0]
            }
        </p>


        
        <p>
            related: 
            <a href={relatedPosts}>
                {relatedPosts}
            </a>
        </p>
    </div>
    <hr/>
    <div class="content">
        <slot/> 
    </div>
</div>


<style>

    a {
        box-shadow: inset 0 -2px 0 0 #000;
    }
    
    a:hover{
        color: white;
        background-color: #000;
    }

</style>
