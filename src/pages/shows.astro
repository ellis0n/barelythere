---
import Layout from '../layouts/Layout.astro';
import Logo from '../components/Logo.astro';
import ContentWrapper from '../components/ContentWrapper.astro';
import Header from '../components/Header.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';

const links = [
	{ href: "/", text: "home", cur: false },
	{ href: '/releases', text: 'releases', cur: false },
	{ href: '/shows', text: 'shows', cur: true },
	{ href: '/contact', text: 'contact', cur: false },
]



---

<Layout title="Barely There Records">
	<main class=" m-auto p-4 max-w-screen-lg ">
		<Header />
		<Navbar links={links} />		
		<ContentWrapper>
				<h2>
					Shows
				</h2>
				<p>---</p>
				<br/>
				<h3>Upcoming Shows</h3>
				<br/>
		</ContentWrapper>
		<Footer/>
</Layout>

<style>
	main {
		color: rgb(236, 235, 238);
		font-family: dotgothic16;
	}


</style>
